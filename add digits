class Solution {
public:
int sum(int num){
    int sum=0;
        while(num!=0)
        {
         
            int temp=num%10;
            sum+=temp;
            num=num/10;
        }
        return sum;
        
}
    int addDigits(int num) {
        while(num>9){
            num=sum(num);
        }
        return num;
    }
};
